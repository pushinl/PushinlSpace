<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReadmoreActivity">

    <ImageView
        android:id="@+id/detailed_img"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        android:src="@drawable/xiaolan2" />

    <TextView
        android:id="@+id/detailed_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detailed"
        android:textColor="@color/purple_700"
        android:textSize="40sp"
        app:layout_constraintTop_toBottomOf="@id/detailed_img"
        app:layout_constraintEnd_toEndOf="@id/detailed_img"
        app:layout_constraintStart_toStartOf="@id/detailed_img" />

</androidx.constraintlayout.widget.ConstraintLayout>